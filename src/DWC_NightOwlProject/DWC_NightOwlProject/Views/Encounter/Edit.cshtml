@model DWC_NightOwlProject.Data.Encounter
@{
    ViewData["Title"] = "Edit encounter";
}
<div>
    <h2>Guided quest</h2>
        <form asp-action="SubmitEdit" method="post">
            <div class="form-group">
                <label asp-for="Completion" class="control-label">Update the details of your encounter</label>
                <input asp-for="Completion" class="form-control" value=@Model.Completion>
                <span asp-validation-for="Completion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id">
            </div>
            <input type="submit" value="Edit encounter">
        </form>
    @*}*@
</div>