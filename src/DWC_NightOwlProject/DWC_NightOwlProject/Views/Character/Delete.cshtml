@model DWC_NightOwlProject.Data.Character

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete your Character?</h3>
<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2" id="notes">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10" id="notes">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>


        <dt class="col-sm-2" id="notes">
            @Html.DisplayNameFor(model => model.Completion)
        </dt>
        <dd class="col-sm-10" id="notes">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.PictureData)" width="1064" height="1064" />
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
